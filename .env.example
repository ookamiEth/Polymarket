# Polymarket API Credentials Template
# Copy this file to .env and fill in your actual credentials

# Your Ethereum private key (exported from Magic.link or your wallet)
PRIVATE_KEY=0xYOUR_PRIVATE_KEY_HERE

# Your Polymarket profile address (where you deposit USDC)
FUNDER_ADDRESS=0xYOUR_FUNDER_ADDRESS_HERE

# Signature type: 1 for Email/Magic login, 0 for Browser Wallet EOA, 2 for Gnosis Safe
SIGNATURE_TYPE=1

# Polygon Chain ID (always 137 for Polygon mainnet)
CHAIN_ID=137

# CLOB API endpoint
CLOB_HOST=https://clob.polymarket.com

# API Key credentials (will be populated after running setup_polymarket_api.py)
POLY_API_KEY=
POLY_API_SECRET=
POLY_API_PASSPHRASE=
